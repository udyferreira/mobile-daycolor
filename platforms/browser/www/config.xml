<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.phonegap.daycolor" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>CorDoDia</name>
    <description>Saiba qual cor usar em cada dia da semana, com alternativas e detalhes.</description>
    <author email="udyferreira@gmail.com" href="http://phonegap.com">Udy Ferreira</author>
    <content src="index.html" />
    <icon src="icon.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
</widget>
